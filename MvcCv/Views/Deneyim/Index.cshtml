@using MvcCv.Models.Entity
@model List<TblDeneyimlerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<h2>Deneyim Listesi</h2>

<table class="table table-hover" style="margin-top:20px;">
    <tr style="background-color:rgb(252, 178, 22)">
        <th>#</th>
        <th>BAŞLIK</th>
        <th>ALT BAŞLIK</th>
        <th>TARİH</th>
        <th>SİL</th>
        <th>DÜZENLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td>@x.AltBaslik</td>
            <td>@x.Tarih</td>
            <td><a href="/Deneyim/DeneyimSil/@x.ID" class="btn btn-default" style="color:red">Sil</a></td> @*class="btn btn-danger"*@
            <td><a href="/Deneyim/DeneyimGetir/@x.ID" class="btn btn-default" style="color:black">Düzenle</a></td> @*class="btn btn-success"*@
        </tr>
    }
</table>
<a href="/Deneyim/DeneyimEkle/" class="btn btn-outline-primary">Yeni Deneyim Ekle</a>