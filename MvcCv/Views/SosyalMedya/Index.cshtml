@using MvcCv.Models.Entity
@model List<TblSosyalMedya>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    string color = "";
    string statusColor = "";
    string durummm = "";
    string checkStatus = "";
    string buttonStatusColor = "";
    string Image = "";
}

<br />
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Hesap Listem</h3>
                            </div>
                            <div class="card-body">
                                <button class="btn btn-info" data-toggle="modal" data-target="#Modal1"> Yeni Sosyal Medya Hesabı Ekle</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Sosyal Medya</th>
                                            <th>Durum</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            switch (x.Durum)
                                            {
                                                case true:
                                                    statusColor = "badge rounded-pill bg-success";
                                                    buttonStatusColor = "btn btn-danger";
                                                    break;
                                                case false:
                                                    statusColor = "badge rounded-pill bg-danger";
                                                    buttonStatusColor = "btn btn-success";
                                                    break;
                                            }
                                            if (x.Durum == false)
                                            {

                                                checkStatus = "Aktif Yap";
                                            }
                                            else
                                            {
                                                checkStatus = "Pasif Yap";
                                            }
                                            if (x.Durum == false)
                                            {

                                                checkStatus = "Aktif Yap";
                                            }
                                            else
                                            {
                                                checkStatus = "Pasif Yap";
                                            }

                                            if (@x.Durum==true)
                                            {
                                                durummm = "Aktif";
                                            }
                                            else
                                            {
                                                durummm = "Pasif";
                                            }
                                            <tr>
                                                <td>@x.ID.</td>
                                                <td>@x.Ad</td>
                                                <td>@durummm</td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/SosyalMedya/Duzenle/@x.ID">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="@buttonStatusColor btn-sm" href="/SosyalMedya/Sil/@x.ID">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        @checkStatus
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Sosyal Medya Hesabı Ekleme Penceresi</h4>
                    </div>
                    <form method="post" action="/SosyalMedya/Ekle/">
                        <div class="modal-body">
                            <label>Soyal Medya İsmi</label>
                            <input class="form-control " type="text" name="Ad" placeholder="Sosyal Medya Hesabı İsmi'ni Giriniz! (örn : Facebook)" />
                            <br />
                            <label>Soyal Medya Linki</label>
                            <input class="form-control " type="text" name="Link" placeholder="Sosyal Medya Hesabı Linki'ni Giriniz!" />
                            <br />
                            <label>Soyal Medya İkonu</label>
                            <input class="form-control " type="text" name="ikon" placeholder="Sosyal Medya Hesabı İkonu'nu Giriniz! (örn : fab fa-facebook-f)" />
                            <br />
                            <button class="btn btn-success">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</body>
</html>
